<form action="/generate" method="POST" class="generate" id="generate" autocomplete="off">
    <div class="section">
        <h2>Select your main color</h2>
        <div class="Pmain-color">
            <div class="input-color"><input type="color" name="color1" value="<%= generate.color1 %>" id="input1"></div>
            <div>
                <div class="Pinput">
                    <label>Hex</label>
                    <input type="text" value="ff9500" id="mainColorHex" maxlength="6" minlength="6" required class="basic-input large-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('hex')" placeholder="ffffff">
                </div>
                <div class="Pinput">
                    <label>RGB</label>
                    <div class="input">
                        <input type="number" value="255" id="mainColorRGB1" max="255" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('rgb')" placeholder="255">
                        <input type="number" value="149" id="mainColorRGB2" max="255" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('rgb')" placeholder="255">
                        <input type="number" value="0" id="mainColorRGB3" max="255" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('rgb')" placeholder="255">
                    </div>
                </div>
                <div class="Pinput">
                    <label>HSL</label>
                    <div class="input">
                        <input type="number" value="35" id="mainColorHSL1" maxlength="3" minlength="1" max="360" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('hsl')" placeholder="360">
                        <input type="number" value="100" id="mainColorHSL2" maxlength="3" minlength="1" max="100" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('hsl')" placeholder="100">
                        <input type="number" value="50" id="mainColorHSL3" maxlength="3" minlength="1" max="100" min="0" required class="basic-input small-input" onkeydown="return event.key != 'Enter';" onchange="colorCode('hsl')" placeholder="100">
                    </div>
                </div>
            </div>
        </div>
        <p class="random"><b onclick="random('color')" style="user-select: none;">Surprise me</b></p>
    </div>
    <div class="section">
        <h2>Select how many colors you want</h2>
        <div class="Pradio">
            <input type="radio" name="amount" id="one" value="<%= generate.amount = 1 %>" required onclick="addColor(1)" checked>
            <label for="one"><div class="radio-label" style="user-select: none;">1</div></label>
            <input type="radio" name="amount" id="two" value="<%= generate.amount = 2 %>" required onclick="addColor(2)">
            <label for="two"><div class="radio-label" style="user-select: none;">2</div></label>
            <input type="radio" name="amount" id="three" value="<%= generate.amount = 3 %>" required onclick="addColor(3)">
            <label for="three"><div class="radio-label" style="user-select: none;">3</div><input type="number" min="0" max="180" id="DR3" onchange="addColor(3, 'Y')" onkeydown="return event.key != 'Enter';"></label>
            <input type="radio" name="amount" id="four" value="<%= generate.amount = 4 %>" required onclick="addColor(4)">
            <label for="four"><div class="radio-label" style="user-select: none;">4</div><input type="number" min="0" max="90" id="DR4" onchange="addColor(4, 'Y')" onkeydown="return event.key != 'Enter';"></label>
        </div>
        <div id="colorAmount"><div class="color" style="background: var(--background-orange);"></div></div>
        <p class="random"><b onclick="random('amount')" style="user-select: none;">It's up to you</b></p>
    </div>
    <div class="section">
        <h2>Finishing your choice</h2>
        <div id="allColor">
            <div id="color1" class="finish-color">
                <div id="finishInput"></div>
                <div class="color-setting">
                    <div onclick="move(-1)" id="svgN1"><svg xmlns="http://www.w3.org/2000/svg" height="37.5px" viewBox="0 0 25 25" width="37.5px" fill="var(--background-white)" class="button button-lcta-ball"><path d="M0 0h24v24H0V0z" fill="none" opacity=".87"/><path d="M17.51 3.87L15.73 2.1 5.84 12l9.9 9.9 1.77-1.77L9.38 12l8.13-8.13z"/></svg></div>
                    <svg xmlns="http://www.w3.org/2000/svg" height="37.5px" viewBox="0 0 25 25" width="37.5px" fill="var(--background-white)" class="button button-lcta-ball" style="background: var(--background-orange); cursor: default;"><g fill="none" style="cursor: default;"><path d="M0 0h24v24H0V0z" style="cursor: default;"/><path d="M0 0h24v24H0V0z" opacity=".87" style="cursor: default;"/></g><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z" style="cursor: default;"/></svg>
                    <div onclick="move(1)" id="svgP1"><svg xmlns="http://www.w3.org/2000/svg" height="37.5px" viewBox="0 0 25 25" width="37.5px" fill="var(--background-white)" style="transform: rotate(180deg);" class="button button-lcta-ball"><path d="M0 0h24v24H0V0z" fill="none" opacity=".87"/><path d="M17.51 3.87L15.73 2.1 5.84 12l9.9 9.9 1.77-1.77L9.38 12l8.13-8.13z"/></svg></div>
                </div>
            </div>
        </div>
        <div class="finish">
            <svg xmlns="http://www.w3.org/2000/svg" height="37.5px" viewBox="0 0 25 25" width="37.5px" fill="var(--background-white)" class="button button-cta-ball" onclick="addNewColor()"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>
            <br>
            <svg xmlns="http://www.w3.org/2000/svg" height="37.5px" viewBox="0 0 25 25" width="37.5px" fill="var(--background-white)" class="button button-ncta-ball" onclick="random('finish')"><path d="M0 0h24v24H0z" fill="none"/><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/><circle cx="7.5" cy="16.5" r="1.5"/><circle cx="7.5" cy="7.5" r="1.5"/><circle cx="12" cy="12" r="1.5"/><circle cx="16.5" cy="16.5" r="1.5"/><circle cx="16.5" cy="7.5" r="1.5"/></svg>
        </div>
    </div>
    <div class="controler">
        <a href="javascript:history.back()" class="button button-lcta" onclick="outro()">Back</a>
        <button type="reset" class="button button-ncta" onclick="Reset()">Reset</button>
        <button type="submit" class="button button-cta" onsubmit="outro()">Finish</button>
    </div>
</form>