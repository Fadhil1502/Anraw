<div class="post" id="post">
    <h2>Post setup</h2>
    <p>Here's your color palatte that others can see</p>
    <form method="POST" action="/post/<%= generate.id %>?_method=PUT">
        <div class="candidat-post">
            <div id="colors">
                <div style="background: var(--background);"></div>
                <div style="background: var(--background-orange);"></div>
                <div style="background: var(--background-white);"></div>
            </div>
            <div id="settings">
                <input type="text" maxlength="30" name="title" value="<%= generate.title %>" placeholder="Title, ex: The color of..." required>                
