                <div><svg xmlns="http://www.w3.org/2000/svg" height="25px" viewBox="0 0 25 25" width="25px" fill="var(--background-orange)"><g><rect fill="none" height="25" width="25"/></g><g><path d="M18,15v3H6v-3H4v3c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2v-3H18z M17,11l-1.41-1.41L13,12.17V4h-2v8.17L8.41,9.59L7,11l5,5 L17,11z"/></g></svg></div>
            </div>
        </div>
        <label for="creator">By</label>
        <input type="text" maxlength="15" name="creator" value="<%= generate.creator %>" placeholder="Your name here" required id="creator">
        <label for="allowSave">Allow save</label>
        <input type="checkbox" name="allowSave" checked value="<%= generate.allowSave %>" id="allowSave">
        <label for="allowQuickSave">Allow quick save</label>
        <input type="checkbox" name="allowQuickSave" checked value="<%= generate.allowQuickSave %>" id="allowQuickSave">
        <label for="linkInstagram">Link my Instagram</label>
        <input type="checkbox" name="linkInstagram" value="<%= generate.linkInstagram %>" id="linkInstagram">
        <form method="POST" action="/post/<%= generate.id %>?_method=DELETE">
            <button type="submit" class="button button-lcta" onclick="sessionStorage.clear()">Cancel</button>
        </form>
        <button type="submit" class="button button-cta">Post</button>
    </form>
</div>